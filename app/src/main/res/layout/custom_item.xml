<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="10dp"
    app:cardElevation="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/listImage"
            android:layout_width="99dp"
            android:layout_height="88dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/maggi"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/listChapter"
            android:fontFamily="@font/quicksand_bold"
            android:text="Cập nhật chương"
            android:textSize="15sp"
            android:layout_marginTop="0dp"
            android:layout_marginStart="25dp"
            android:layout_below="@+id/listImage"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/listBookName"
            android:fontFamily="@font/quicksand_bold"
            android:text="Tên sách"
            android:textColor="@color/lavender"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="3dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@id/listImage"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/listAuthor"
            android:text="Tác giả"
            android:fontFamily="@font/quicksand_bold"
            android:textSize="15sp"
            android:layout_below="@+id/listBookName"
            android:layout_toRightOf="@+id/listImage"
            android:layout_marginTop="0dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/listUpdated"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/listAuthor"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="37dp"
            android:layout_marginEnd="10dp"
            android:layout_toRightOf="@+id/listImage"
            android:fontFamily="@font/quicksand_bold"
            android:text="Thời gian đăng tải"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/listBookID"
            android:text="Thời gian đăng tải"
            android:fontFamily="@font/quicksand_bold"
            android:textSize="15sp"
            android:layout_toRightOf="@+id/listImage"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:visibility="invisible"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>