<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="10dp"
    app:cardElevation="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/listImageBM"
            android:layout_width="99dp"
            android:layout_height="88dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/maggi"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded" />

        <Button
            android:id="@+id/listChapterBM"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/listUpdatedBM"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/listImageBM"
            android:background="@android:color/transparent"
            android:fontFamily="@font/quicksand_bold"
            android:gravity="left"
            android:text="Cập nhật chương"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/listBookNameBM"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="3dp"
            android:layout_toEndOf="@id/listImageBM"
            android:fontFamily="@font/quicksand_bold"
            android:text="Tên sách"
            android:textColor="@color/lavender"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/listUpdatedBM"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/listBookNameBM"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="10dp"
            android:layout_toRightOf="@+id/listImageBM"
            android:fontFamily="@font/quicksand_bold"
            android:text="Thời gian đăng tải"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/listBookIDBM"
            android:text="Thời gian đăng tải"
            android:fontFamily="@font/quicksand_bold"
            android:textSize="15sp"
            android:layout_toRightOf="@+id/listImageBM"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:visibility="invisible"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/listBookuseridBM"
            android:text="Thời gian đăng tải"
            android:fontFamily="@font/quicksand_bold"
            android:textSize="15sp"
            android:layout_toRightOf="@+id/listImageBM"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:visibility="invisible"/>

        <ImageButton
            android:id="@+id/imageButtonDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="13dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/close" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>