<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.BookMarkFragment">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cài đặt"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="@color/lavender"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Font chữ văn bản"
        android:textStyle="bold"
        android:textSize="16dp"
        android:textColor="@color/lavender"
        android:layout_below="@+id/titleTextView"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>

    <Spinner
        android:id="@+id/spinner_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleTextView"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:entries="@array/list_items"
        android:spinnerMode="dropdown"/>

    <TextView
        android:id="@+id/tv_seekbar_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner_options"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textSize="16dp"
        android:textColor="@color/lavender"
        android:text="Cỡ chữ văn bản: "/>

    <SeekBar
        android:id="@+id/seekbar_slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_seekbar_value"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:max="100" />

    <TextView
        android:id="@+id/tv_voice_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner_options"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textSize="16dp"
        android:textColor="@color/lavender"
        android:text="Giọng đọc văn bản: "/>

    <Spinner
        android:id="@+id/spinner_options_voice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleTextView"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:entries="@array/list_items_voice"
        android:spinnerMode="dropdown"/>

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="24dp"
        android:text="Lưu"
        android:background="@drawable/login_button_background"
        />

    <Button
        android:id="@+id/btnChangePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="102dp"
        android:background="@drawable/login_button_background"
        android:text="Đổi mật khẩu" />

    <TextView
        android:id="@+id/tv_speed_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner_options"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textSize="16dp"
        android:textColor="@color/lavender"
        android:text="Tốc độ đọc văn bản: "/>

    <Spinner
        android:id="@+id/spinner_options_speed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleTextView"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:entries="@array/list_items_speed"
        android:spinnerMode="dropdown"/>


</RelativeLayout>
